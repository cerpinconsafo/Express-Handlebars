<div class="container">
    <div class="jumbotron text-center m-0">
        <h1 class="display-3">GET IN MY BELLY!</h1>
        <h2 class="lead">Create a Burger // Eat a Burger // BE a Burger</h2>
        <hr class="my-4">
        <div class="row d-flex justify-content-around">
            <div class="col-lg">
            <div class="card">
                <div class="card-header">
                   Need to Get in my Belly...
                </div>
                <ul class="list-group list-group-flush m-0">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burger-block devour=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            </div>
            <div class="col-lg">
            <div class="card">
                <div class="card-header">
                    Currently in my Belly...
                </div>
                <ul class="list-group list-group-flush m-0">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burger-block devour=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center m-5">
            <div class="col-lg">
            <div class="card">
                <div class="card-header">
                    Add a Tasty Burger...
                </div>
                <div class="card-body">
                    <form class="create-form">
                        <div class="form-group">
                            <textarea class="form-control text-center" id="burgerEntry" placeholder="Enter Your Delicious Creation Here"></textarea>
                        </div>
                        <button type="submit" class="btn">Submit!</button>
                    </form>
                </div>
            </div>
            </div>
        </div>
    </div>
</div> 