<div class="container">

  <h1>GET IN MY BELLY</h1>

  <div class="row">
    <div class="col-4">
      <h2>Needs to Get in my Belly...</h2>
      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burger-block devour=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-4"></div>
    <div class="col-4">
      <h2>Currently in my Belly...</h2>
      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burger-block devour=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h2>Add a burger</h2>
  <form class="create-form">
    <div class="form-group">
      <label for="burgerEntry">Burger Name:</label>
      <input type="text" id="burgerEntry" name="name">
    </div>
    <button type="submit">Add burger</button>
  </form>
</div>